@page
@model HymneALaGastronomie.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "Restaurants";
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" placeholder="Search" />
            <span>
                <button class="btn btn-secondary">
                    <i class="fas fa-search" style="font-size:22px"></i>
                </button>
            </span>
        </div>
    </div>
</form>

@foreach(var restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant"/>
}

<a asp-page="./Edit" class="btn btn-primary">Add New Restaurant</a>


@section footer{
    <div>@Model.Message</div>   
}

